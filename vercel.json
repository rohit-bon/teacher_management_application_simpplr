{
    "version": 2,
    "builds": [
        {
            "src": "teacher_management_application/wsgi.py",
            "use": "@vercel/python",
            "config": {"maxLambdaSize": "15mb", "runtime": "python3.12"}
        },
        {
            "src": "build files.sh",
            "use": "@vercel/static-build",
            "config": {
                "dist": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "teacher_management_application/wsgi.p"
        }
    ]
} 